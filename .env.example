# Database Selection (choose one: 'snowflake' or 'sqlserver')
DATABASE_TYPE=snowflake

# Salla API Configuration
SALLA_API_BASE_URL=https://api.salla.dev/admin/v2
SALLA_API_TOKEN=your_bearer_token_here

# Snowflake Configuration (Cloud Database)
SNOWFLAKE_ACCOUNT=your_account
SNOWFLAKE_USER=your_username
SNOWFLAKE_PASSWORD=your_password
SNOWFLAKE_WAREHOUSE=your_warehouse
SNOWFLAKE_DATABASE=SALLA_DWH
SNOWFLAKE_SCHEMA=PUBLIC
SNOWFLAKE_ROLE=your_role

# SQL Server Configuration (On-Premise Database)
SQLSERVER_HOST=localhost
SQLSERVER_PORT=1433
SQLSERVER_DATABASE=SALLA_DWH
SQLSERVER_USER=your_sql_username
SQLSERVER_PASSWORD=your_sql_password
SQLSERVER_DRIVER=ODBC Driver 17 for SQL Server
SQLSERVER_TRUSTED_CONNECTION=False

# Airflow Configuration
AIRFLOW_HOME=/path/to/airflow
AIRFLOW__CORE__DAGS_FOLDER=/path/to/dags
AIRFLOW__CORE__LOAD_EXAMPLES=False

# API Configuration
API_BATCH_SIZE=100
API_MAX_RETRIES=3
API_RETRY_DELAY=5

# Dashboard Configuration
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=5000
DASHBOARD_DEBUG=False

# Data Quality
DLQ_DIRECTORY=./data/dlq
ENABLE_DATA_VALIDATION=True

# Health Monitoring Dashboard
MONITORING_HOST=0.0.0.0
MONITORING_PORT=5001
MONITORING_DEBUG=False

# Bronze Layer Production Settings
API_RATE_LIMIT_DELAY=1.0
BRONZE_BATCH_SIZE=100
BRONZE_MAX_RECORDS=1000

# Incremental Load Settings
INCREMENTAL_LOOKBACK_DAYS=30

# Execution Control
LOG_LEVEL=INFO
